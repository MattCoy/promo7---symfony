{% extends 'layout.html.twig' %}

{% block title %}ajout d'article{% endblock %}


{% block content %}
	
	{# pour afficher tous type de messages #}
	{% for label, messages in app.flashes %}

		{% for message in messages %}

			<div class="alert alert-{{ label }}">
	            {{ message }}
	        </div>

		{% endfor%}

	{% endfor %}
	
	{# équivalent twig de la boucle foreach #}
	{% for article in articles %}

	{# à chaque tour de boucle, on récupère article qui ici est un objet 
	 pour accéder au titre, article.title #}
	 <article>
	     {{ article.title }}, publie par {{ article.user.username }} le {{ article.datepubli|date('d/m/Y') }}
	     <br>
		 <a href="{{ path('show', {id: article.id}) }}"><i class="fa fa-eye"></i></a> | <a href="{{ path('article-update', {id: article.id}) }}"><i class="fa fa-edit"></i></a>
	</article>
	{% endfor %}

{% endblock %}
